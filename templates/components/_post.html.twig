
<div class="minimal__post-item grid-item">
    <div class="minimal__post-thumb tgImage__hover">
        <div class="minimal__post-tags">
            {% for category in post.categories %}
                <a href="{{ path('default_category', {'slug':category.slug}) }}">
                    {{  category.name }}
                </a>
            {% endfor %}
        </div>
        <a href="{{  path('default_post', {'category'}) }}">
            <img src="{{ post.image }}" alt={{ post.title }}>
        </a>
    </div>
    <div class="minimal__post-content">
        <ul class="tgbanner__content-meta list-wrap">
            <li><span class="by">By</span> <a href="blog.html">{{ post.user.firstName  }}   {{  }}post.user.lastName</a></li>
            <li>{{ post.publishedAt('d/m/y') }}</li>
        </ul>
        <h4 class="title tgcommon__hover"><a href="blog-details.html">Why we need guidelines for brain
                scan data to real data.</a></h4>
    </div>
</div>